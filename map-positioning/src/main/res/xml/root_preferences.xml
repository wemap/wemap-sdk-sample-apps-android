<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/global_preferences">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="VISUAL_DEBUGGER_ENABLED"
            app:title="@string/visual_debugger_title" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="SWITCH_LEVELS_AUTOMATICALLY_ON_USER_MOVEMENTS"
            app:title="@string/switch_levels_title" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="USER_LOCATION_PROJECTION_ON_ITINERARY_ENABLED"
            app:title="@string/user_location_projection_title" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="ITINERARY_RECALCULATION_ENABLED"
            app:title="@string/recalculate_itinerary_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/vps_static_position_detector_preferences">

        <EditTextPreference
            app:defaultValue="3f"
            app:key="WINDOW_DURATION_SECONDS"
            app:title="@string/vps_static_position_detector_window_duration_seconds"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1f"
            app:key="GEOFENCE_RADIUS_METERS"
            app:title="@string/vps_static_position_detector_geofence_radius_meters"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/vps_conveying_detector_preferences">

        <EditTextPreference
            app:defaultValue="3"
            app:key="DURATION_SECONDS"
            app:title="@string/vps_conveying_detector_duration_seconds"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="5f"
            app:key="ELEVATOR_BUFFER_WIDTH"
            app:title="@string/vps_conveying_detector_elevator_buffer_width"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="2f"
            app:key="LINEAR_CONVEYING_BUFFERS_WIDTH"
            app:title="@string/vps_conveying_detector_linear_conveying_buffers_width"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>